    rem /**
    rem  * Set the column type
    rem  *
    rem  * @param BBjString type! SQL type
    rem  *
    rem  * <b>Note :</b>
    rem  * Not all sql types are supported , for example it does not make sense to declare a colum type as STRUCT.
    rem  * Setting the type will change the column common properites automatically like the filter , cell editor , ....
    rem  *
    rem  * @see https://docs.oracle.com/javase/8/docs/api/java/sql/Types.html
    rem  */
    method public void setType(BBjNumber type!)
        #Type! = type!
        REM BBjGridExWidgetCellEditorAGText
        REM BBjGridExWidgetCellEditorAGLargeText
        REM BBjGridExWidgetCellEditorBasicBoolean
        REM BBjGridExWidgetCellEditorBasicNumber
        REM BBjGridExWidgetCellEditorBasicDate
        REM BBjGridExWidgetCellEditorBasicTimestamp
        SWITCH type!
            CASE Types.BIGINT
            CASE Types.BIT
            CASE Types.DECIMAL
            CASE Types.DOUBLE
            CASE Types.FLOAT
            CASE Types.INTEGER
            CASE Types.NUMERIC
            CASE Types.NUMERIC
            CASE Types.TINYINT
                #setFilter(new BBjGridExWidgetFilterAGNumber())
                #setValueFormatterExpression(new BBjGridExWidgetExpressionNumbersFormatter(#getDefaultNumbersMask()))
                #setCellEditor(new BBjGridExWidgetCellEditorBasicNumber())
                BREAK
            CASE Types.DATE
                #setFilter(new BBjGridExWidgetFilterBasicDate())
                #setValueFormatterExpression(new BBjGridExWidgetExpressionDatesFormatter(#getDefaultDatesMask()))
                #setCellEditor(new BBjGridExWidgetCellEditorBasicDate())
                BREAK
            CASE Types.TIMESTAMP
            CASE Types.TIMESTAMP_WITH_TIMEZONE
                #setFilter(new BBjGridExWidgetFilterBasicTimestamp())
                #setValueFormatterExpression(new BBjGridExWidgetExpressionDatesFormatter(#getDefaultTimestampsMask()))
                #setCellEditor(new BBjGridExWidgetCellEditorBasicTimestamp())
                BREAK
            CASE Types.BOOLEAN
                #setFilter(new BBjGridExWidgetFilterBasicBoolean())
                #setCellRenderer(new BBjGridExWidgetRendererBoolean())
                #setCellEditor(new BBjGridExWidgetCellEditorBasicBoolean())
                BREAK
            CASE default
                BREAK
        SWEND
    methodend
