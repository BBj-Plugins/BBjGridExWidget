use ::BBjGridExWidget/BBjGridExWidgetRenderers.bbj::BBjGridExWidgetRendererCustomHTML

class public BBjGridExWidgetRendererCustomHTMLTest

    field private BBjGridExWidgetRendererCustomHTML Instance!
    
    rem @Before
    method public void setUp()
        #Instance!  = new BBjGridExWidgetRendererCustomHTML()
    methodend

    rem @Test
    method public void testRenderNameIsSet()
        Assert.Equals(#Instance!.getCellRendererName() , "TemplateRenderer")
    methodend

    rem @Test
    method public void testCanSetTemplate()
        json! = #Instance!.getAsJsonObject()
        Assert.Equals(json!.get("renderTemplate").isJsonNull() , BBjAPI.TRUE)
        
        #Instance!.setTemplate("Some Template")
        json! = #Instance!.getAsJsonObject()
        
        Assert.Equals(json!.get("renderTemplate").getAsString() , "Some Template")
    methodend
    
    rem @After
    method public void tearDown()
        #Instance! = null()
    methodend


classend