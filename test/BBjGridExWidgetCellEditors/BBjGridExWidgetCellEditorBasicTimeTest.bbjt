use ::BBjGridExWidget/BBjGridExWidgetCellEditors.bbj::BBjGridExWidgetCellEditorBasicTime

class public BBjGridExWidgetCellEditorBasicTimeTest

    field private BBjGridExWidgetCellEditorBasicTime Instance!

    rem @Before
    method public void setUp()
        #Instance! = new BBjGridExWidgetCellEditorBasicTime()
    methodend
    
    rem @Test
    method public void testCanConstructWithMask()
        mask! = "my mask"
        obj! = new BBjGridExWidgetCellEditorBasicTime(mask!); rem this is not valid dateTime mask
        Assert.Equals(obj!.getMask() , mask!)
    methodend
    
    rem @Test
    method public void testCalendarIsDisabled()
        Assert.Equals(#Instance!.getEnableCalendar() = 0 , BBjAPI.TRUE)
        
        mask! = "my mask"
        obj! = new BBjGridExWidgetCellEditorBasicTime(mask!); rem this is not valid dateTime mask
        Assert.Equals(obj!.getEnableCalendar() = 0 , BBjAPI.TRUE)
    methodend
    
    rem @Test
    method public void testTimeIsEnabled()
        Assert.Equals(#Instance!.getEnableTime() = 1 , BBjAPI.TRUE)
        
        mask! = "my mask"
        obj! = new BBjGridExWidgetCellEditorBasicTime(mask!); rem this is not valid dateTime mask
        Assert.Equals(obj!.getEnableTime() = 1 , BBjAPI.TRUE)        
    methodend

    rem @Test
    method public void testMaskIsForTime()
        Assert.Equals(#Instance!.getMask() = "%Hz:%mz:%sz", BBjAPI.TRUE)
    methodend

    rem @After
    method public void tearDown()
        #Instance! = null()
    methodend

classend
