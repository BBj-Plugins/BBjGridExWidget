use ::BBjGridExWidget/BBjGridExWidgetCellEditors.bbj::BBjGridExWidgetCellEditorBasicDate

class public BBjGridExWidgetCellEditorBasicDateTest

    field private BBjGridExWidgetCellEditorBasicDate Instance!

    rem @Before
    method public void setUp()
        #Instance! = new BBjGridExWidgetCellEditorBasicDate()
    methodend

    rem @Test
    method public void testCanConstructWithMask()
        mask! = "my mask"
        obj! = new BBjGridExWidgetCellEditorBasicDate(mask!); rem this is not valid dateTime mask
        Assert.Equals(obj!.getMask() , mask!)
    methodend
    
    rem @Test
    method public void testTimeIsDisabled()
        Assert.Equals(#Instance!.getEnableTime() = 0 , BBjAPI.TRUE)
        
        mask! = "my mask"
        obj! = new BBjGridExWidgetCellEditorBasicDate(mask!); rem this is not valid dateTime mask
        Assert.Equals(obj!.getEnableTime() = 0 , BBjAPI.TRUE)
    methodend

    rem @Test
    method public void testMaskIsForDate()
        Assert.Equals(#Instance!.getMask() = "%Y/%Mz/%Dz", BBjAPI.TRUE)
    methodend

    rem @After
    method public void tearDown()
        #Instance! = null()
    methodend

classend
