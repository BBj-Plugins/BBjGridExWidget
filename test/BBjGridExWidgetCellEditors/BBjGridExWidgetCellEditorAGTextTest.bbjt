use ::BBjGridExWidget/BBjGridExWidgetCellEditors.bbj::BBjGridExWidgetCellEditorAGText
use com.google.gson.JsonObject

class public BBjGridExWidgetCellEditorAGTextTest

    field private BBjGridExWidgetCellEditorAGText Instance!
    
    rem @Before
    method public void setUp()
        #Instance!  = new BBjGridExWidgetCellEditorAGText()
    methodend

    rem @Test
    method public void testCellEditorNameIsSet()
        Assert.Equals(#Instance!.getCellEditorName() , "agTextCellEditor")
    methodend
        
    rem @Test
    method public void testCanSetUserFormatter()
        declare auto JsonObject json!
        json! = #Instance!.getAsJsonObject()
        Assert.Equals(json!.get("useFormatter").getAsBoolean() , BBjAPI.FALSE)
        
        #Instance!.setUserFormmatter(1)
        json! = #Instance!.getAsJsonObject()
        Assert.Equals(json!.get("useFormatter").getAsBoolean() , BBjAPI.TRUE)
    methodend
    
    rem @After
    method public void tearDown()
        #Instance! = null()
    methodend


classend
